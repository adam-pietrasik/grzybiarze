<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mushroomCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/mushroomImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:src="@drawable/gatherer_logo_1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/mushroomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mushroom_name"
            app:layout_constraintBottom_toBottomOf="@+id/mushroomImage"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>